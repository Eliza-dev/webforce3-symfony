{% extends 'base.html.twig' %}

{% block title %}Friend index{% endblock %}

{% block body %}
    <h1>Friend index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for friend in friends %}
            <tr>
                <td>{{ friend.id }}</td>
                <td>{{ friend.name }}</td>
                <td>{{ friend.email }}</td>
                <td>
                    <a href="{{ path('friend_show', {'id': friend.id}) }}">show</a>
                    <a href="{{ path('friend_edit', {'id': friend.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('friend_new') }}">Create new</a>
{% endblock %}
